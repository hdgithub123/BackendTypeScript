CREATE DATABASE MYDATABASE;

use MYDATABASE;

CREATE TABLE users (
    id CHAR(36) PRIMARY KEY DEFAULT (UUID()),
    username VARCHAR(50) UNIQUE NOT NULL,
    password VARCHAR(255) NOT NULL,
    fullName VARCHAR(100),
    email VARCHAR(100) UNIQUE NOT NULL,
    phone VARCHAR(20),
    isActive TINYINT(1) NOT NULL, 
    createdAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    createdBy VARCHAR(100)
);


CREATE TABLE roles (
    id CHAR(36) PRIMARY KEY DEFAULT (UUID()),
    roleName VARCHAR(50) NOT NULL,
    code VARCHAR(50) UNIQUE NOT NULL, -- Mã tùy chỉnh có thể thay đổi
    description TEXT,
    createdAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    createdBy VARCHAR(100)
);


CREATE TABLE rights (
    id CHAR(36) PRIMARY KEY DEFAULT (UUID()),
    rightName VARCHAR(50) NOT NULL,
    code VARCHAR(50) UNIQUE NOT NULL, -- Mã quyền có thể thay đổi
    description TEXT,
    createdAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    createdBy VARCHAR(100)
);



CREATE TABLE roles_rights (
    roleId CHAR(36),
    rightId CHAR(36),
    isActive TINYINT(1) NOT NULL,
    PRIMARY KEY (roleId, rightId),
    FOREIGN KEY (roleId) REFERENCES roles(id),
    FOREIGN KEY (rightId) REFERENCES rights(id)
);


-- CREATE TABLE users_roles (
--     userId CHAR(36),
--     roleId CHAR(36),
--     isActive BOOLEAN,
--     PRIMARY KEY (userId, roleId),
--     FOREIGN KEY (userId) REFERENCES users(id),
--     FOREIGN KEY (roleId) REFERENCES roles(id)
-- );


CREATE TABLE users_zones_roles (
    userId CHAR(36),
    roleId CHAR(36),
    zoneId CHAR(36),
    isActive BOOLEAN,
    PRIMARY KEY (userId, roleId, zoneId),
    FOREIGN KEY (userId) REFERENCES users(id),
    FOREIGN KEY (roleId) REFERENCES roles(id),
    FOREIGN KEY (zoneId) REFERENCES zones(id)
);

CREATE TABLE zones (
    id CHAR(36) PRIMARY KEY DEFAULT (UUID()),
    zoneName VARCHAR(255) NOT NULL,
    code VARCHAR(50) UNIQUE NOT NULL, -- Mã quyền có thể thay đổi
    address TEXT,
    description TEXT,
    parentId CHAR(36) NULL,
    createdAt TIMESTAMP NULL DEFAULT CURRENT_TIMESTAMP,
    createdBy VARCHAR(100),
    FOREIGN KEY (parentId) REFERENCES zones(id)
);


